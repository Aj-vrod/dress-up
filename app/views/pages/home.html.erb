<div class="banner" style="background-image: url();">
  <div class="container">
    <h1>Find a stunning dress for any occasion</h1>
    <div class="search">
      <input type="text" name="address" id="address-input" placeholder="Enter an address" class="form-control">
      <input type="submit" value="search" class="btn btn-primary">
    </div>
  </div>
</div>

<!-- Browse selected dresses  -->
<div class="container">
  <div class="top">
    <h2>Casual dresses</h2>
  </div>

  <div class="main-content">
    <div class="cards">
      <% @dresses.where(category: "Casual Dresses").limit(3) do |dress| %>

      <%= link_to dress_path(dress), class: "dress" do %>
          <div class="card-dress">
            <% if dress.image.attached? %>
              <%= cl_image_tag dress.image.key, class: "card-dress-image" %>
            <% else %>
              <%= image_tag dress.photo, class: "card-dress-image" %>
            <% end %>
            <div class="card-dress-infos">
              <div>
                <h2><%= dress.title%></h2>
                <p><%= dress.price %>â‚¬ / day</p>
              </div>
            </div>
          </div>
        <% end %>
    <% end %>
    </div>
  </div>
  <%= link_to "Discover more", dresses_path, class: "btn-primary-small"  %>
</div>



