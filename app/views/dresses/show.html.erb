
<div class="container">
  <% if @dress.image.attached? %>
    <%= cl_image_tag @dress.image.key, width: 400, height: 300, crop: :fill, class: "dress-image" %>
  <% else %>
    <%= image_tag @dress.photo %>
  <% end %>
  <h1><%= @dress.title %></h1>
  <p><%= @dress.description %></p>
  <p>category: <%= @dress.category %></p>
  <p>color: <%= @dress.color %></p>
  <p>price: <%= @dress.price %></p>
