<div class="navbar sticky-top">
  <%= link_to "Dress up!", root_path, class: "btn-logo" %>
  <div class="btn-left">
    <div class="dropdown show">
      <% if current_user %>
        <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle" %>
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <%= link_to "My dresses", mydresses_dresses_path, class: "dropdown-item" %>
          <%= link_to "My Bookings", bookings_path, class: "dropdown-item" %>
        </div>
      <% else %>
        <%= link_to "Log In", new_user_session_path %>
        <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>
    </div>
  </div>
</div>
